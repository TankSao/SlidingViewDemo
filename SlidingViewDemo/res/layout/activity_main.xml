<com.example.slidingviewdemo.view.SlidingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.slidingviewdemo"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:slidePadding="100dp"
    app:slideType="2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
        <include layout="@layout/left_view" />
        
        <include layout="@layout/mid_view" />
        
        <include layout="@layout/right_view" />
        
    </LinearLayout>

</com.example.slidingviewdemo.view.SlidingView>
